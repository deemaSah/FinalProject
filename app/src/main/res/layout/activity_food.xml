<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32E6C7EC"
    tools:context=".FoodActivity">


    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00321818"
        android:text="@string/FoodServices"
        android:textColor="#B4201E1E"
        android:textSize="30sp"
        android:textStyle="bold" />

    <GridLayout
        style="@style/GridLayoutCardStyle"
        android:layout_below="@+id/title_view">

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/LinearLayoutCardStyle">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/breakfast" />

                <TextView
                    style="@style/textViewCardStyle"
                    android:text="@string/BreakFastPart" />

                <Button
                    style="@style/buttonCardStyle"
                    android:onClick="breakfast"
                    android:text="@string/come" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_row="0"
            android:layout_column="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/LinearLayoutCardStyle">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/maindish" />

                <TextView
                    style="@style/textViewCardStyle"
                    android:text="@string/MainDishPart" />

                <Button
                    style="@style/buttonCardStyle"
                    android:onClick="maindish"
                    android:text="@string/come" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_row="1"
            android:layout_column="0"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/LinearLayoutCardStyle">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/appetizers" />

                <TextView
                    style="@style/textViewCardStyle"
                    android:text="@string/AppetizersPart" />

                <Button
                    style="@style/buttonCardStyle"
                    android:onClick="appetizers"
                    android:text="@string/come" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_row="1"
            android:layout_column="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout style="@style/LinearLayoutCardStyle">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/snaks" />

                <TextView
                    style="@style/textViewCardStyle"
                    android:text="@string/SnacksPart" />

                <Button
                    style="@style/buttonCardStyle"
                    android:onClick="snaks"
                    android:text="@string/come" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>