<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="firstUIStyle">
        <item name= "android:fontFamily">@font/aclonica</item>
        <item name= "android:shadowColor">#D5D0D0</item>
        <item name="android:text">@string/title</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">#cdfcff</item>
    </style>
    <style name="CheckINOutText">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#423636</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d6ebd2</item>
        <item name="colorPrimaryDark">#c2e0bb</item>
        <item name="colorAccent">#add6a5</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item> <!--custom animation style-->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>